{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ES2020",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "lib": ["es2015", "es5", "dom", "scripthost", "esnext.asynciterable", "esnext"],
    "baseUrl": "src",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {}
  },
  "exclude": ["dist", "docs", "**/*/__fixtures__/**/*"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
